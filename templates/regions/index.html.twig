{% extends 'base.html.twig' %}

{% block title %}Список регионов{% endblock %}

{% block page_title %}
    <h1 class="px-4 py-10">Список регионов</h1>
{% endblock %}

{% block body %}
    <div class="px-4 py-16 sm:px-6 lg:px-8 sm:py-24 mx-auto bg-white font-sans max-w-2xl lg:max-w-7xl">
        <h2 class="sr-only">Regions</h2>
        <ul>
            {% for region in regions %}
                <li><a href="{{ path('app_regional_catalog_index', {regionCode: region.code}) }}">{{ region.name }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
