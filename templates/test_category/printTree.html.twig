{% extends 'base.html.twig' %}

{% block title %}Дерево категорий!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1><a href="{{ path('app_test_trees') }}">дерево - {{ root.name }}</a></h1>

    <ul class="">
        {% for category in children %}
            <li class=""><a href="{{ path('app_test_print_category', {id: category.id}) }}">{{ str_repeat('-', category.level) }}&nbsp;{{ category.name|e }}</a> [{{ category.root.id }}] {{ category.left }} - {{ category.right }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
